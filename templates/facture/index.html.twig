{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
<h1><span class="fa fa-stethoscope" aria-hidden="true"></span>Facture index</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tarif</th>
                <th>Date_facture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.tarif }}</td>
                <td>{{ facture.dateFacture ? facture.dateFacture|date('Y-m-d') : '' }}</td>
                <td><div class="login-icon ml-2">
                    <a class="" href="{{ path('facture_show', {'id': facture.id}) }}"> show </a>
                    <a class="" href="{{ path('facture_edit', {'id': facture.id}) }}"> edit </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="login-icon ml-2">
<a class="" href="{{ path('facture_new') }}"> Create new </a>
</div>

<div class="login-icon ml-2">
<a class="" href="{{ path('admin') }}"> Page admin </a>
</div>
{% endblock %}
