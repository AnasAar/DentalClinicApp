{% extends 'base.html.twig' %}

{% block title %}Prescription index{% endblock %}

{% block body %}
<h1><span class="fa fa-stethoscope" aria-hidden="true"></span>Prescription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbr_fois</th>
                <th>Quand_medi</th>
                <th>Forme_medi</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prescription in prescriptions %}
            <tr>
                <td>{{ prescription.id }}</td>
                <td>{{ prescription.nbrFois }}</td>
                <td>{{ prescription.quandMedi }}</td>
                <td>{{ prescription.formeMedi }}</td>
                <td><div class="login-icon ml-2">
                    <a class="" href="{{ path('prescription_show', {'id': prescription.id}) }}"> show </a>
                    <a class="" href="{{ path('prescription_edit', {'id': prescription.id}) }}"> edit </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="login-icon ml-2">
<a class="" href="{{ path('prescription_new') }}"> Create new </a>
</div>

<div class="login-icon ml-2">
<a class="" href="{{ path('admin') }}"> Page admin </a>
</div>
{% endblock %}
