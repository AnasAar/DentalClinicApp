{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}

<h1><span class="fa fa-stethoscope" aria-hidden="true"></span>Consultations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_cons</th>
                <th>Type_cons</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.dateCons ? consultation.dateCons|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ consultation.typeCons }}</td>
                <td><div class="login-icon ml-2">
                    <a class="" href="{{ path('consultation_show', {'id': consultation.id}) }}"> show </a>
                    <a class="" href="{{ path('consultation_edit', {'id': consultation.id}) }}"> edit </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="login-icon ml-2">
<a class="" href="{{ path('consultation_new') }}"> Create new </a>
</div>

<div class="login-icon ml-2">
<a class="" href="{{ path('admin') }}"> Page admin </a>
</div>

{% endblock %}
